    .header__container.container 
      .header__main 
        h3.header__title 
        | Header
        span.header__separator  /  
        h3.header__logo Logo
      nav.header__nav 
        ul.header__nav-list 
          li.header__nav-item 
            a(href="<%= dataset.nav[0].href %>") <%= dataset.nav[0].text %>
