        ul.header__bc-list 
          li.header__bc-item
            a(href="<%= dataset.breadcrumbs[0].href %>") <%= dataset.breadcrumbs[0].text %>
          li.header__bc-item
            a(href="<%= dataset.breadcrumbs[1].href %>") <%= dataset.breadcrumbs[1].text %>
          li.header__bc-item
            a(href="<%= dataset.breadcrumbs[2].href %>") <%= dataset.breadcrumbs[2].text %>
  .content
    .content__container.container
      aside.filter 
        .filter__content
          h3.filter__title 26 Results Found
          .filter__body 
            form.filter__form(action="")
              .filter__crit.criterian#criterian-first
                .criterian__name 
                  h4.criterian__title Param 1
                  button(type='button').criterian__arrow 
                    img(src="./assets/svg/arrow.svg", alt="")
                .criterian__body 
                  label.criterian__checkbox-label(for="crit-checkbox-1")
                    input.criterian__checkbox#crit-checkbox-1(type="checkbox", name="param1")
                    span.criterian__square
                    span.criterian__text Value 1
                  label.criterian__checkbox-label(for="crit-checkbox-2")
                    input.criterian__checkbox#crit-checkbox-2(type="checkbox", name="param1")
                    span.criterian__square
                    span.criterian__text Value 2
                  label.criterian__checkbox-label(for="crit-checkbox-3")
                    input.criterian__checkbox#crit-checkbox-3(type="checkbox", checked, name="param1")
                    span.criterian__square
                    span.criterian__text Value 3
                  label.criterian__checkbox-label(for="crit-checkbox-4")
                    input.criterian__checkbox#crit-checkbox-4(type="checkbox", checked, name="param1")
                    span.criterian__square
                    span.criterian__text Value 4
                  label.criterian__checkbox-label(for="crit-checkbox-5")
                    input.criterian__checkbox#crit-checkbox-5(type="checkbox", name="param1")
                    span.criterian__square
                    span.criterian__text Value 5
              .filter__crit.criterian#criterian-second
                .criterian__name 
                  h4.criterian__title Param 2
                  button(type='button').criterian__arrow 
                    img(src="./assets/svg/arrow.svg", alt="")
                .criterian__body 
                  label.criterian__radio-label(for="crit-radio-1") 
                    input.criterian__radio#crit-radio-1(type="radio", name="param2")
                    span.criterian__circle
                    span.criterian__text Value 2_1
                  label.criterian__radio-label(for="crit-radio-2") 
                    input.criterian__radio#crit-radio-2(type="radio", name="param2")
                    span.criterian__circle
                    span.criterian__text Value 2_2
                  label.criterian__radio-label(for="crit-radio-3") 
                    input.criterian__radio#crit-radio-3(type="radio", checked, name="param2")
                    span.criterian__circle
                    span.criterian__text Value 2_3
              .filter__crit.criterian#criterian-third
                .criterian__name 
                  h4.criterian__title Param 3
                  button(type='button').criterian__arrow 
                    img(src="./assets/svg/arrow.svg", alt="")
                .criterian__body 
                  input.criterian__number(type="number", name="para3min", placeholder='min')
                  input.criterian__number(type="number", name="para3max", placeholder='max')
              .filter__crit.criterian#criterian-fourth
                .criterian__name 
                  h4.criterian__title Param 4
                  button(type='button').criterian__arrow 
                    img(src="./assets/svg/arrow.svg", alt="")
                .criterian__body 
                  input.criterian__text(type="text", name="param4", placeholder='Keyword')
              button.filter__submit.button SEARCH
      main.main 
        section.showcase  
          h1.showcase__title <%= dataset.page_meta.h1 %>
          .showcase__actions 
            .showcase__controls
              button.showcase__prev-btn.button &lt;
              .showcase__pages 
                button.showcase__page-btn.button 1
                button.showcase__page-btn.button.active-page 2
              button.showcase__next-btn.button &gt;
